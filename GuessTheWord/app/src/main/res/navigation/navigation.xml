<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/titleFragment">
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.android.example.guesstheword.screens.title.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/title_fragment">
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@+id/gameFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
            android:id="@+id/gameFragment"
            android:name="com.android.example.guesstheword.screens.game.GameFragment"
            android:label="GameFragment">
        <action
                android:id="@+id/action_gameFragment_to_scoreFragment"
                app:destination="@id/scoreFragment"
                app:popUpTo="@+id/titleFragment"
                app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.android.example.guesstheword.screens.score.ScoreFragment"
        android:label="ScoreFragment"
        tools:layout="@layout/score_fragment">
        <argument
                android:name="score"
                app:argType="integer"
                android:defaultValue="0" />
        <action android:id="@+id/action_scoreFragment_to_gameFragment" app:destination="@id/gameFragment"/>
    </fragment>
</navigation>